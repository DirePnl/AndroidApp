<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/custom_edittext"
    android:backgroundTint="@color/lightgreen"
    android:elevation="6dp"
    android:orientation="vertical"
    android:padding="20dp"
    tools:layout_editor_absoluteX="45dp"
    tools:layout_editor_absoluteY="215dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/spendlymain"
            android:gravity="center"
            android:text="Select Category"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:columnCount="5">

            <Button
                android:id="@+id/btnAdd"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="5"
                android:layout_column="0"
                android:fontFamily="@font/spendlymain"
                android:text="Addicon"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:iconGravity="textStart"
                app:iconPadding="20dp"
                app:iconSize="25dp"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnUtilities"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="3"
                android:layout_column="2"
                android:fontFamily="@font/spendlymain"
                android:text="Utilities"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnSavings"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="3"
                android:layout_column="3"
                android:fontFamily="@font/spendlymain"
                android:text="Savings"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnFood"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="1"
                android:layout_column="2"
                android:fontFamily="@font/spendlymain"
                android:text="Food"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnShopping"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="1"
                android:layout_column="0"
                android:fontFamily="@font/spendlymain"
                android:text="Shopping"
                android:textColor="@color/black"
                android:textColorLink="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnGrocery"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="3"
                android:layout_column="0"
                android:fontFamily="@font/spendlymain"
                android:text="Grocery"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnTranspo"
                style="@style/Widget.MaterialComponents.TimePicker.Button"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:layout_row="1"
                android:layout_column="3"
                android:fontFamily="@font/spendlymain"
                android:text="Transportation"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Button"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/button2"
                android:layout_width="90dp"
                android:layout_height="5dp"
                android:layout_row="2"
                android:layout_column="2"
                android:text="Button"
                tools:visibility="invisible" />

            <Button
                android:id="@+id/button3"
                tools:visibility="invisible"
                android:layout_width="80dp"
                android:layout_height="5dp"
                android:layout_row="4"
                android:layout_column="3"
                android:text="Button"
                android:visibility="invisible" />
        </GridLayout>


    </LinearLayout>
