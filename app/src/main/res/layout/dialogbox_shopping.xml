<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_edittext"
        android:backgroundTint="@color/lightgreen"
        android:orientation="vertical"
        android:padding="24dp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="285dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spendlymain"
                android:gravity="center"
                android:text="Shopping"
                android:textColor="@color/black"
                tools:textSize="20sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/spendlymain"
            android:text="Date:"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ShoppingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableEnd="@drawable/baseline_calendar_month_24"
            android:focusable="false"
            android:fontFamily="@font/spendlymain"
            android:hint="MM/DD/YYYY"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/spendlymain"
            android:text="label:"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ShoppingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
            android:drawableTint="@color/black"
            android:focusable="false"
            android:fontFamily="@font/spendlymain"
            android:hint="Input"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ShoppingExpense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp
"
            android:clickable="true"
            android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
            android:drawableTint="@color/black"
            android:focusable="false"
            android:fontFamily="@font/spendlymain"
            android:hint="Expense"
            android:inputType="none"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>